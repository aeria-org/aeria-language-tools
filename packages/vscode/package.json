{
  "name": "aeria-lang-vscode",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/aeria-org/language-tools.git",
    "directory": "packages/vscode"
  },
  "engines": {
    "vscode": ">=0.9.0-pre.1"
  },
  "files": [
    "dist",
    "snippets",
    "syntaxes",
    "language-configuration.json"
  ],
  "publisher": "Aeria",
  "main": "./dist/index.js",
  "activationEvents": [
    "onLanguage:aeria"
  ],
  "contributes": {
    "languages": [
      {
        "id": "aeria",
        "aliases": [
          "Aeria",
          "aeria"
        ],
        "extensions": [
          "aeria"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aeria",
        "scopeName": "source.aeria",
        "path": "./syntaxes/aeria.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "aeria",
        "path": "./snippets/aeria.code-snippets"
      }
    ]
  },
  "devDependencies": {
    "@vscode/vsce": "^2.26.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
